# API Configuration
API_V1_STR=/api/v1

# Server Configuration
SERVER_NAME=SecureScribeBE
SERVER_HOST=http://localhost
SERVER_PORT=9999

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Project Configuration
PROJECT_NAME=SecureScribeBE

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB_S2T=0
REDIS_PASSWORD=
REDIS_USER=

# Google AI Configuration (REQUIRED for Gemini LM)
GOOGLE_API_KEY=your_google_api_key_here

# HuggingFace Configuration
HF_TOKEN=

# Language Model Configuration
LM_TYPE=gemini
# Options for LM_TYPE: "none" (disabled), "gemini" (Google Gemini API)

LM_WEIGHT=0.3
# Weight for LM score in shallow fusion (0.0 to 1.0)
# Higher values give more weight to LM, lower values trust CTC more
# Recommended: 0.2-0.4 for Vietnamese

LM_MODEL_NAME=gemini-1.5-flash-8b
# Gemini model for LM rescoring
# Options: gemini-1.5-flash-8b (fast), gemini-1.5-flash (balanced), gemini-1.5-pro (best quality)

LM_TEMPERATURE=0.0
# Temperature for LM generation (0.0 = deterministic, recommended for ASR)

LM_MAX_TOKENS=50
# Max tokens for LM continuation (default: 50)
